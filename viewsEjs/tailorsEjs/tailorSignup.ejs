            <li class="nav-item">
              <a class="nav-link js-scroll-trigger" href="/tailor/login" style="color: #2196f3"><i class="fa fa-sign-in" aria-hidden="true"></i> LOGIN</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <div class="bg-success col-lg-12 col-md-12 col-sm-12 col-12">
        <section class="signup col-sm-12" id="">
            <div class="box col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="signup-content">
                    <div class="signup-form">
                        <h2 class="form-title" style="color: #5cb85c">Tailor Signup</h2>
                        <% if (errorMessage) { %>
                            <div class="user-message user-message--error"><%= errorMessage %></div>
                        <% } %>
                        <% if (updateMessage) { %>
                            <div class="user-message user-message--update"><%= updateMessage %></div>
                        <% } %>
                        <form method="POST" action="/tailor/postTailorSignup" class="register-form" id="register-form">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label for="name"><i class="fa fa-user fa-1x"></i></label>
                                        <input type="text" name="firstname" id="firstname" placeholder="First Name"
                                        onkeydown="return alphaOnly(event);" required/>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label for="name"><i class="fa fa-user fa-1x"></i></label>
                                        <input type="text" name="lastname" id="lastname" placeholder="Last Name"
                                        onkeydown="return alphaOnly(event);" required/>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="input-group">
                                        <label for="name"><i class="fa fa-calendar-alt fa-1x"></i></label>
                                        <input type="Date" name="birthdate" id="birthdate" onfocusout="checkBirthDate()" required/>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="input-group">
                                        <div class="col-lg-6">
                                            <label for="gender"><i class="fa fa-male fa-1x"></i></label>
                                            <label class="radio-container m-r-45">Male
                                                <input type="radio" checked="checked" value="Male" name="gender">
                                                <span class="checkmark"></span>
                                            </label>
                                        </div>
                                        <div class="col-lg-6">
                                            <label for="gender"><i class="fa fa-female fa-1x"></i></label>
                                            <label class="radio-container">Female
                                                <input type="radio" value="Female" name="gender">
                                                <span class="checkmark"></span>
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <label for="userAdd"><i class="fa fa-address-card fa-1x"></i></label>
                                        <input type="text" name="address" id="address" placeholder="Address" required/>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label for="userCity"><i class="fa fa-city fa-1x"></i></label>
                                        <select name="city" id="city" class="form-control">
                                            <option selected="true">Select City</option>
                                            <option value="Vapi">Vapi</option>
                                            <option value="Surat">Surat</option>
                                            <option value="Vadodara">Vadodara</option>
                                            <option value="Ahmedabad">Ahmedabad</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label for="userState"><i class="fa fa-city fa-1x"></i></label>
                                        <select name="state" id="state" class="form-control">
                                            <option selected="true">Select State</option>
                                            <option value="Gujarat">Gujarat</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label for="pincode"><i class="fa fa-map-pin fa-1x"></i></label>
                                        <input type="text" name="pincode" id="pincode" placeholder="Enter 6 Digit Pincode"
                                        minlength="6" maxlength="6" onkeydown="return numOnly(event);"  required/>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label for="contact"><i class="fa fa-phone-alt fa-1x"></i></label>
                                        <input type="text" name="contact" id="contact" placeholder="Enter 10 Digit Contact Number"
                                        minlength="10" maxlength="10" onkeydown="return numOnly(event);"  required/>
                                    </div>
                                </div>
                                
                            </div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <label for="email"><i class="fa fa-envelope fa-1x"></i></label>
                                        <input type="text" name="email" id="email" placeholder="Email-Address"
                                        onfocusout="validateEmail(this);"  required/>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label for="password"><i class="fa fa-key fa-1x"></i></label>
                                        <input type="password" name="pass" id="pass" placeholder="Password"
                                        onfocusout="validate()" required/>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label for="comPassword"><i class="fa fa-key fa-1x"></i></label>
                                        <input type="password" name="re_pass" id="re_pass" placeholder="Repeat your password"
                                        onfocusout="validate()" required/>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                              <div class="col-lg-6 col-md-6 col-sm-6 col-6">
                                  <div class="form-group form-button">
                                      <a><input type="submit" name="change" id="change" class="btn btn-secondary" value="Register"/></a>
                                  </div>
                              </div>
                              <div class="col-lg-6 col-md-6 col-sm-6 col-6">
                                  <div class="form-group form-button">
                                      <a href="/"><input type="button" name="back" id="back" class="btn btn-danger" value="Back"/></a>
                                  </div>
                              </div>
                            </div>
                        </form>
                        <a href="/tailor/login" class="signup-already">I am already member</a>
                    </div>
                </div>
            </div>
        </section>
    </div>    


    

