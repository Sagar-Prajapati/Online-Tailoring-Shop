<%- include('../partials/head.ejs') %>
<title><%= pageTitle %></title>
</head>
<%- include('../partials/userNavbar.ejs')%>
<div class="bg-secondary col-lg-12 col-md-12 col-sm-12 col-12">
    <section class="all col-sm-12" id="profile">
        <div class="box col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="all-content">
                <div class="all-form">
                    <h2 class="form-title text-primary">Profile</h2>
                    <% if (updateMessage) { %>
                        <div class="user-message user-message--update"><%= updateMessage %></div>
                    <% } %>
                    <form method="POST" class="register-form" id="">
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-12">
                                <div class="form-group">
                                    <label for="name"><i class="fa fa-user fa-1x"></i></label>
                                    <input type="text" name="firstname" id="fname" value="<%= udata.firstName %>" placeholder="First Name" disabled="yes"/>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-12">
                                <div class="form-group">
                                    <label for="name"><i class="fa fa-user fa-1x"></i></label>
                                    <input type="text" name="lastname" id="lname" value="<%= udata.lastName %>" placeholder="Last Name" disabled="yes" />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-12">
                                <div class="input-group">
                                    <label for="name"><i class="fa fa-calendar-alt fa-1x"></i></label>
                                    <input type="text" name="dateofbirth" id="dateofbirth" value="<%= udata.dateOfBirth %>" placeholder="Date of Birth"disabled="yes"/>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-12">
                                <div class="input-group">
                                    <input type="text" name="gender" id="gender" value="<%= udata.gender %>" placeholder="Gender" disabled="yes"/>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12 col-md-6 col-sm-12">
                                <div class="form-group">
                                    <label for="name"><i class="fa fa-address-card fa-1x"></i></label>
                                    <input type="text" name="address" id="address" value="<%= uAddress[0].area %>" placeholder="Address" disabled="yes"/>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-12">
                                <div class="form-group">
                                    <label for="name"><i class="fa fa-city fa-1x"></i></label>
                                    <input type="text" name="city" id="city" value="<%= uAddress[0].city %>" placeholder="City" disabled="yes"/>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-12">
                                <div class="form-group">
                                    <label for="name"><i class="fa fa-flag fa-1x"></i></label>
                                    <input type="text" name="state" id="state" value="<%= uAddress[0].state %>" placeholder="State"disabled="yes"/>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-12">
                                <div class="form-group">
                                    <label for="name"><i class="fa fa-map-pin fa-1x"></i></label>
                                    <input type="text" name="pincode" id="pincode" value="<%= uAddress[0].pincode %>" placeholder="Pincode" disabled="yes"/>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-12">
                                <div class="form-group">
                                    <label for="name"><i class="fa fa-phone-alt fa-1x"></i></label>
                                    <input type="text" name="contact" id="contact" value="<%= udata.contactNumber %>" placeholder="Contact Number" disabled="yes"/>
                                </div>
                            </div>
                            
                        </div>
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12">
                                <div class="form-group">
                                    <label for="name"><i class="fa fa-envelope fa-1x"></i></label>
                                    <input type="text" name="email" id="email"
                                    value="<%= udata.emailId %>" placeholder="Email-Address" disabled="yes"/>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                          <div class="col-lg-6 col-md-6 col-sm-6 col-12">
                              <div class="form-group form-button">
                                  <a href="/updateProfile"><input type="button" name="change" id="change" class="btn btn-secondary" value="Want to Change Details"/></a>
                              </div>
                          </div>
                          <div class="col-lg-6 col-md-6 col-sm-6 col-12">
                              <div class="form-group form-button">
                                  <a href="/getUserHome"><input type="button" name="back" id="back" class="btn btn-danger" value="Back"/></a>
                              </div>
                          </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>    
<%- include('../partials/footer.ejs') %>
<%- include('../partials/end.ejs') %>