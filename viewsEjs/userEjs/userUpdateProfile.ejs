<%- include('../partials/head.ejs') %>
<title><%= pageTitle %></title>
</head>
<%- include('../partials/userNavbar.ejs')%>
<div class="bg-secondary col-lg-12 col-md-12 col-sm-12 col-12">
    <section class="all col-sm-12" id="profile">
        <div class="box col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="all-content">
                <div class="all-form">
                    <h2 class="form-title text-primary">Modify Profile</h2>
                    <form method="POST" action="/postUpdateProfile" class="register-form" id="formUpdate">
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-6">
                                <div class="form-group">
                                    <label for="name"><i class="fa fa-user fa-1x"></i></label>
                                    <input type="text" name="UpdateFirstname" value="<%= udata.firstName %>" id="UpdateFirstname" placeholder="First Name" form="formUpdate" />
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6">
                                <div class="form-group">
                                    <label for="name"><i class="fa fa-user fa-1x"></i></label>
                                    <input type="text" name="UpdateLastname" value="<%= udata.lastName %>" id="UpdateLastname" placeholder="Last Name" form="formUpdate" />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-6">
                                <div class="input-group">
                                    <label for="name"><i class="fa fa-calendar-alt fa-1x"></i></label>
                                    <input type="Date" name="UpdateDob" id="UpdateDob" value="<%= udata.dateOfBirth %>" placeholder="Date of Birth" form="formUpdate"/>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6">
                                <div class="input-group">
                                    <div class="col-lg-6">
                                        <label for="name"><i class="fa fa-male fa-1x"></i></label>
                                        <label class="radio-container m-r-45">Male
                                            <input type="radio" value="Male" name="gender" form="formUpdate">
                                            <span class="checkmark"></span>
                                        </label>
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-sm-6">
                                        <label for="name"><i class="fa fa-female fa-1x"></i></label>
                                        <label class="radio-container">Female
                                            <input type="radio" name="gender" value="Female" form="formUpdate">
                                            <span class="checkmark"></span>
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12 col-md-6 col-sm-12">
                                <div class="form-group">
                                    <label for="name"><i class="fa fa-address-card fa-1x"></i></label>
                                    <input type="text" name="UpdateAddress" id="UpdateAddress" value="<%= uAddress[0].area %>" placeholder="Address" form="formUpdate" />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-6">
                                <div class="form-group">
                                    <label for="name"><i class="fa fa-city fa-1x"></i></label>
                                    <input type="text" name="UpdateCity" id="UpdateCity" value="<%= uAddress[0].city %>" placeholder="City" form="formUpdate" />
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6">
                                <div class="form-group">
                                    <label for="name"><i class="fa fa-flag fa-1x"></i></label>
                                    <input type="text" name="UpdateState" id="UpdateState" value="<%= uAddress[0].state %>" placeholder="State" form="formUpdate"/>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-6">
                                <div class="form-group">
                                    <label for="name"><i class="fa fa-map-pin fa-1x"></i></label>
                                    <input type="text" name="UpdatePincode" id="UpdatePincode" value="<%= uAddress[0].pincode %>" placeholder="Pincode" form="formUpdate" />
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6">
                                <div class="form-group">
                                    <label for="name"><i class="fa fa-phone-alt fa-1x"></i></label>
                                    <input type="text" name="UpdateContact" id="UpdateContact" value="<%= udata.contactNumber %>" placeholder="Contact Number" form="formUpdate" />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                          <div class="col-lg-4 col-md-4 col-sm-4 col-4">
                              <div class="form-group form-button">
                                  <input type="submit" name="update" id="update" class="btn btn-success" value="UPDATE" form="formUpdate" />
                              </div>
                          </div>
                          <div class="col-lg-4 col-md-4 col-sm-4 col-4">
                              <div class="form-group form-button">
                                  <a href="/userProfile"><input type="button" name="back" id="back" class="btn btn-danger" value="Back"/></a>
                              </div>
                          </div>
                          <div class="col-lg-4 col-md-4 col-sm-4 col-4">
                              <div class="form-group form-button">
                                  <a href="/getUserHome"><input type="button" class="btn btn-primary" value="Home"/></a>
                              </div>
                          </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>    
<%- include('../partials/footer.ejs') %>
<%- include('../partials/end.ejs') %>