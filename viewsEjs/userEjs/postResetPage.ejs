<%- include('../partials/head.ejs') %>
<title><%= pageTitle %></title>
</head>



<body id="page-top">

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
      <div class="container">
          <a href="/"><img src="../javascript_CSS/img/Logo/DT_main.png" height="80px"></a>
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
          <ul class="navbar-nav ml-auto">
          </ul>
        </div>
      </div>
    </nav>
    <div class="bg-info col-lg-12 col-md-12 col-sm-12 col-12">
        <section class="signin col-sm-12" id="">
            <div class="box col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="signin-content">
                    <div class="signin-form">
                        <h2 class="form-title" style="color: #5bc0de">Reset Password</h2>
                        <form method="POST" action="/updatePassword" class="register-form" id="login-form">
                            <div class="form-group">
                                <input type="hidden" value="<%= userid %>" name="userid"/>
                                <input type="hidden" value="<%= passwordToken %>" name="passwordToken"/>
                                <label for="your_name"><i class="fa fa-envelope fa-1x"></i></label>
                                <input type="text" name="email" id="email" placeholder="Your Email"
                                value="<%= userEmail %>" disabled/>
                            </div>
                            <div class="form-group">
                                <label for="your_pass"><i class="fa fa-lock fa-1x"></i></label>
                                <input type="password" name="new_pass" id="new_pass" onfocusout="validate_For_Reset()" placeholder="Create New Password"/>
                            </div>
                             <div class="form-group">
                                <label for="your_pass"><i class="fa fa-lock fa-1x"></i></label>
                                <input type="password" name="confirm_new_pass" id="confirm_new_pass" onfocusout="validate_For_Reset()" placeholder="Confirm New Password"/>
                            </div>
                            <div class="row">
                              <div class="col-lg-6 col-md-6 col-sm-6 col-6">
                                  <div class="form-group form-button">
                                      <input type="submit" name="submit" id="submit" class="btn btn-info" value="Change"/>
                                  </div>
                              </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </section>
    </div>

<%- include('../partials/footer.ejs') %>
<%- include('../partials/end.ejs') %>